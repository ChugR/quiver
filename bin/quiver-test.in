from __future__ import absolute_import
from __future__ import print_function
from __future__ import unicode_literals
from __future__ import with_statement

import argparse
import os
import sys
import traceback

home = os.path.normpath("@quiver_home@")
sys.path.insert(0, os.path.join(home, "python"))

from plano import *

def test_impls(sender_impl, receiver_impl, failures, peer_to_peer=False):
    options = [
        "--verbose",
        "--messages", "1k",
    ]
    temp_file = make_temp()

    if peer_to_peer:
        options.append("--peer-to-peer")
        summary = "{} -> {} ".format(sender_impl, receiver_impl)
    else:
        summary = "{} -> broker -> {} ".format(sender_impl, receiver_impl)

    print("{:.<73} ".format(summary), end="")

    flush()

    options = " ".join(options)
    command = "quiver-impl-test {} {} {} &> {}"

    try:
        call(command, sender_impl, receiver_impl, options, temp_file)

        print("PASSED")
    except CalledProcessError as e:
        failures.append(str(e))

        print("FAILED")

        with open(temp_file, "r") as f:
            for line in f:
                print("> {}".format(line), end="")

    flush()

def main():
    set_message_threshold("warn")

    amqp_sender_impls = [
        "qpid-jms",
        "qpid-messaging-cpp",
        "qpid-messaging-python",
        "qpid-proton-python",
        "rhea",
        "vertx-proton",
    ]

    amqp_client_receiver_impls = [
        "qpid-jms",
        "qpid-messaging-cpp",
        "qpid-messaging-python",
        "qpid-proton-python",
        "rhea",
        "vertx-proton",
    ]

    amqp_server_receiver_impls = [
        "qpid-proton-python",
        "rhea",
    ]

    if exists(join(home, "exec", "arrow-qpid-proton-cpp")):
        amqp_sender_impls.append("qpid-proton-cpp")
        amqp_client_receiver_impls.append("qpid-proton-cpp")
        amqp_server_receiver_impls.append("qpid-proton-cpp")

    failures = list()

    print("# Testing brokered send and receive")

    for sender_impl in sorted(amqp_sender_impls):
        for receiver_impl in amqp_client_receiver_impls:
            test_impls(sender_impl, receiver_impl, failures)

    print("# Testing peer-to-peer send and receive")

    for sender_impl in sorted(amqp_sender_impls):
        for receiver_impl in amqp_server_receiver_impls:
            test_impls(sender_impl, receiver_impl, failures, peer_to_peer=True)

    print("# Test failures: {}".format(len(failures)))

    for failure in failures:
        print(failure) # Need summary

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
