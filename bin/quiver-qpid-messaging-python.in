from __future__ import absolute_import
from __future__ import print_function
from __future__ import unicode_literals
from __future__ import with_statement

import os
import sys

default_home_dir = os.path.normpath("@quiver_home@")
home_dir = os.environ.get("QUIVER_HOME", default_home_dir)

sys.path.insert(0, os.path.join(home_dir, "python"))

import time

from qpid_messaging import *

class Client(object):
    def __init__(self):
        self.output_dir = None
        self.domain = None
        self.path = None
        self.messages = None
        self.bytes_ = None
        self.credit = None
        self.timeout = None
        
        self.transfers = 0

    def run(self):
        conn = Connection(self.domain, protocol=b"amqp1.0",
                          sasl_mechanisms=b"ANONYMOUS")
        conn.open()

        try:
            session = conn.session()

            link = self.create_link(session)
            link.capacity = self.credit

            while self.transfers < self.messages:
                self.transfer_message(link)
        finally:
            conn.close()

    def create_link(self, session):
        raise NotImplementedError()

    def transfer_message(self, link):
        raise NotImplementedError()

    def save(self):
        pass
                
class Sender(Client):
    def create_link(self, session):
        return session.sender(self.path)

    def transfer_message(self, link):
        message = Message(b"x" * self.bytes_)
        message.id = str(self.transfers + 1)
        message.properties[b"send-time"] = time.time()

        # link.send(message, timeout=self.timeout)
        link.send(message) # XXX Send has no timeout arg
        
        self.transfers +=1
        
class Receiver(Client):
    def create_link(self, session):
        return session.receiver(self.path)

    def transfer_message(self, link):
        if link.available() == 0:
            return
        
        message = link.get(timeout=self.timeout)

        link.session.acknowledge()

        stime = message.properties["send-time"]
        rtime = time.time()
        record = "{},{:.9f},{:.9f}\r\n".format(message.id, stime, rtime)

        sys.stdout.write(record)
        
        self.transfers +=1

def main():
    output_dir, mode, operation, domain, path = sys.argv[1:6]
    messages, bytes_, credit, timeout = map(int, sys.argv[6:10])

    if mode != "client":
        raise Exception("This implementation only supports client mode")

    if operation == "send":
        client = Sender()
        
    if operation == "receive":
        client = Receiver()

    client.output_dir = output_dir
    client.operation = operation
    client.domain = domain
    client.path = path
    client.messages = messages
    client.path = path
    client.bytes_ = bytes_
    client.credit = credit
    client.timeout = timeout

    client.run()
    
if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
