set -eu

# until nc localhost $port 2> /dev/null < /dev/null; do
#     sleep 0.1
# done

port=$(python -S -c "import random; print random.randrange(49152, 65535)")

quiver --server receive localhost:$port/q0 -n 100 &

sleep 0.5

quiver send localhost:$port/q0 -n 100 --connections 2 --sessions 4 --links 8

wait

port=$(python -S -c "import random; print random.randrange(49152, 65535)")

quiver --server send localhost:$port/q0 -n 100 &

sleep 0.5

quiver receive localhost:$port/q0 -n 100 --connections 2 --sessions 4 --links 8

wait
