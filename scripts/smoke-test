set -eu

port=$(python -S -c "import random; print random.randrange(49152, 65535)")
ready_file=$(mktemp -u)

trap "rm $ready_file" EXIT

quiver --server --ready-file $ready_file receive localhost:$port/q0 -n 100 &

until [[ -f $ready_file ]]; do
    sleep 0.01
done

quiver send localhost:$port/q0 -n 100 --connections 2 --sessions 4 --links 8

wait

rm $ready_file

quiver --server --ready-file $ready_file send localhost:$port/q0 -n 100 &

until [[ -f $ready_file ]]; do
    sleep 0.01
done

quiver receive localhost:$port/q0 -n 100 --connections 2 --sessions 4 --links 8

wait
