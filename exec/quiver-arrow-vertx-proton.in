from __future__ import absolute_import
from __future__ import print_function
from __future__ import unicode_literals
from __future__ import with_statement

import os
import sys

home = os.path.normpath("@quiver_home@")
sys.path.insert(0, os.path.join(home, "python"))

from plano import *

def main():
    set_message_threshold("warn")

    if "QUIVER_VERBOSE" in ENV:
        set_message_threshold("notice")

    jar_file = join(home, "java", "quiver-vertx-proton.jar")

    if len(ARGS) == 1:
        with working_dir(make_temp_dir()):
            call("jar -xf {} META-INF", jar_file)
            print(read(join("META-INF", "maven", "io.vertx", "vertx-proton", "pom.properties")), end="")

        call("java -version")
        exit()

    args = [
        "/usr/bin/env",
        "--",
        "java",
        "-classpath", jar_file,
        "-Dorg.slf4j.simpleLogger.defaultLogLevel=warn",
        "net.ssorj.quiver.QuiverArrowVertxProton",
    ]

    args += ARGS[1:]

    notice("Calling '{}'", " ".join(args))

    os.execl(*args)

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
